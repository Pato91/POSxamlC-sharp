            <Button x:Name="editUserBtn" Content="Edit User" HorizontalAlignment="Left" Margin="560,135,0,0" VerticalAlignment="Top" Width="113" Background="GreenYellow" Click="editUserBtn_Click"/>
            <Label Content="Meraki1.0- a Ayebale Bright Johnson Product" HorizontalAlignment="Center" Margin="271,450,292.567,0" VerticalAlignment="Top" Height="30" Width="255"/>
            <dxe:SearchControl x:Name="searchUserControl" HorizontalAlignment="Left" Margin="117,133,0,0" VerticalAlignment="Top" Width="180" KeyDown="searchUser_KeyUp"/>

        </Grid>
    </DockPanel>

</Page>
